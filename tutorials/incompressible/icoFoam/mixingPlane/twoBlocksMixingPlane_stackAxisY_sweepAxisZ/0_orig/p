FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      p;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 2 -2 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            zeroGradient;
    }

    leftIn
    {
        type            zeroGradient;
    }

    rightOut
    {
        type            fixedValue;
        value           uniform 0;
    }

    mixpLeftOut
    {
        type            mixingPlane;
    }

    mixpRightIn
    {
        type            mixingPlane;
    }

    frontAndBack
    {
        type            empty;
    }
}

